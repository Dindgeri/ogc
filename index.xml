    <style>
      <![CDATA[
      body {
        font-family: "FreeMono", "Andale Mono", monospace;
        margin: 0 auto;
        max-width: 800px;
        padding: 20px;
      }

      .logo {
        display: block;
        margin: 0 auto;
        width: 80px;
        fill: #00868C;
      }

      nav {
        background: #00B3BB;
        padding: 10px;
        display: flex;
        justify-content: space-between;
        align-items: center;
      }

      nav ul {
        list-style: none;
        padding: 0;
        margin: 0;
        display: flex;
        justify-content: flex-end;
        align-items: center;
      }

      nav ul li {
        margin-right: 10px;
      }

      nav ul li a {
        color: #FFF;
        text-decoration: none;
      }

      .burger-menu {
        display: none;
        cursor: pointer;
      }

      .burger-menu div {
        width: 25px;
        height: 3px;
        background-color: #FFF;
        margin: 5px;
        transition: all 0.3s ease;
      }

      @media (max-width: 600px) {
        .logo {
          width: 60px;
        }

        nav ul {
          flex-direction: column;
          position: absolute;
          top: 50px;
          left: 0;
          width: 100%;
          background-color: #00B3BB;
          padding: 10px 0;
          display: none;
        }

        nav ul li {
          margin-right: 0;
          margin-bottom: 10px;
        }

        nav ul li:last-child {
          margin-bottom: 0;
        }

        .burger-menu {
          display: block;
        }

        .active {
          transform: translateX(0%);
        }

        nav.mobile-active ul {
          display: flex;
          flex-direction: column;
          justify-content: flex-start;
          align-items: flex-start;
        }
      }

      content {
        margin-top: 20px;
      }

      section {
        display: none;
      }

      section#home {
        display: block;
      }

      h1 {
        text-align: center;
        font-size: 24px;
      }

      h2 {
        font-size: 18px;
        margin-top: 20px;
      }

      p {
        margin-bottom: 10px;
        text-align: justify;
      }

      ul {
        margin-top: 10px;
        padding-left: 20px;
      }
      ]]>
    </style>
  </head>
  <body>
